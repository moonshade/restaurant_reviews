<div class="container mx-auto p-3 my-3 bg-light text-dark">
    <h2 class="text-center text-info">編輯餐廳資料</h2>
    <div class="p-3 mt-3">
        <h6 class="text-secondary"><small>(<i class="fas fa-star-of-life text-danger"></i>)</small> 代表必填欄位</h6>
        <form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
            <!-- 餐廳名稱、categor -->
            <div class="form-group row">
                <label class="col mt-2">
                    中文名稱:<small>(<i class="fas fa-star-of-life text-danger"></i>)</small>
                    <input type="text" class="form-control" name="name" placeholder="中文名稱" value="{{restaurant.name}}"
                        required>
                </label>
                <label class="col mt-2">
                    英文名稱:<small>(<i class="fas fa-star-of-life text-danger"></i>)</small>
                    <input type="text" class="form-control" name="name_en" placeholder="English Name"
                        value="{{restaurant.name_en}}" required>
                </label>
            </div>
            <!-- location、phon、rating -->
            <div class="form-group row">
                <label class="col">
                    類別:<small>(<i class="fas fa-star-of-life text-danger"></i>)</small>
                    <input type="text" class="form-control" name="category" placeholder="美式"
                        value="{{restaurant.category}}" required>
                </label>
                <label class="col">
                    電話:<small>(<i class="fas fa-star-of-life text-danger"></i>)</small>
                    <input type="text" class="form-control" name="phone" placeholder="02 0000 0000"
                        value="{{restaurant.phone}}" required>
                </label>
            </div>
            <div class="form-group row">
                <label class="col">
                    地址:
                    <input type="text" class="form-control" name="location" placeholder="地址"
                        value="{{restaurant.location}}">
                </label>
            </div>
            <div class="form-group row">
                <label class="col">
                    Google Map:
                    <input type="text" class="form-control" name="google_map" placeholder="Google Map URL"
                        value="{{restaurant.google_map}}">
                </label>
            </div>
            <!-- image、google_map、description -->
            <div class="form-group row">
                <label class="col">
                    評分:<small>(<i class="fas fa-star-of-life text-danger"></i>)</small>
                    <input type="number" class="form-control" name="rating" placeholder="1-5" min="0" max="5" step="0.1"
                        value="{{restaurant.rating}}" required>
                </label>
                <label class="col">
                    圖片:
                    <input type="url" class="form-control" name="image" placeholder="http://example.com/image/image.jpg"
                        value="{{restaurant.image}}">
                </label>
            </div>
            <div class="form-group">
                <label>描述</label>
                <textarea class="form-control" name="description"
                    placeholder="description">{{restaurant.description}}</textarea>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-secondary mr-2">編輯確認</button>
                <a href="/" class="btn btn-info">返回</a>
            </div>
        </form>
    </div>
</div>